#Group 'ffw-all' with all free flow wine servers
[ffw-all:children]
ffw-dev-vm
ffw-prod-vm
ffw-prod
ffw-test
ffw-vm1
ffw-vm2

#Group 'ffw-all-vm' with all free flow wine servers that are virtual machines
[ffw-all-vm:children]
ffw-dev-vm
ffw-prod-vm
ffw-vm1
ffw-vm2

#Group 'ffw-all-vm' with all free flow wine servers that are droplets
[ffw-all-drop:children]
ffw-prod
ffw-test

# Variables that will be applied to all free flow wines servers
[ffw-all:vars]
